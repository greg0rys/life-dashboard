<head>
  <style>
    *{
        box-sizing: border-box;
    }
      nav {
          height: 100vh;
          width: 240px;
          position: fixed;
          top: 0;
          left: 0;
          background-color: #E6E6FA;
          overflow-x: hidden;
          transition: 0.3s;
          display: flex;
          flex-flow: column wrap;
          justify-content: space-evenly;
      }

      nav a {
          padding: 15px 0 15px 25px;
          text-decoration: none;
          font-size: 18px;
          color: #008080;
          display: block;

          transition: 0.3s;
      }

      /* Apply different style if screen height is less than 450px */
      @media screen and (max-width: 450px) {
          nav {
              width: 200px;
              overflow-x: clip;
              overflow-y: clip;
          }
          nav > a {
              font-size: 18px;
          }
      }
  </style>
</head>
