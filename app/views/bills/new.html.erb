<head>
  <style>
      .form-container {
          display: flex;
          flex-direction: column;
          width: 50%;
          margin: 0 auto;

      }

      .input-field {
          width: 100%;
          padding: 10px;
          margin: 5px 0;
      }

      .submit-button {
          width: 100%;
          padding: 10px;
          margin-top: 10px;
      }

      header {
          display: flex;
          flex-flow: row wrap;
          justify-content: space-evenly;
          align-items: center;
      }
  </style>
</head>

<header>
  <h1>New User</h1>
  <p><%= link_to "Back to Bills", bills_path %></p>
</header>
<div class="form-container">
  <%= form_for @bill do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'input-field' %>
    </div>

    <div class="field">
      <%= f.label :amount %>
      <%= f.number_field :amount, step: 0.01, class: 'input-field' %>
    </div>

    <div class="field">
      <%= f.label :user_id, "User ID" %>
      <%= f.number_field :user_id, class: 'input-field' %>
    </div>

    <div class="field">
      <%= f.label :account_id, "Account ID" %>
      <%= f.number_field :account_id, class: 'input-field' %>
    </div>

    <div class="actions">
      <%= f.submit "Submit", class: 'submit-button' %>
    </div>
  <% end %>
</div>